{
    "prettier.prettierPath": "./node_modules/prettier/",
    "typescript.preferences.importModuleSpecifier": "relative",
    "restructuredtext.languageServer.disabled": true,
    "typescript.tsdk": "node_modules\\typescript\\lib",
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[javascriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[markdown]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "aws/**/stacks/*.js": true,
        "aws/lib/*.js": true,
        "aws/lib/custom-resources/datadog/**/*.js": true,
        "aws/lib/custom-resources/hasura/**/*.js": true,
        "aws/lib/custom-resources/heroku/**/*.js": true,
        "aws/lib/custom-resources/netlify/**/*.js": true,
        "aws/lib/custom-resources/sendgrid/**/*.js": true,
        "aws/lib/custom-resources/vonage/**/*.js": true,
        "aws/lib/custom-resources/auth0/*.js": true,
        "aws/lib/custom-resources/auth0/lambdas/*.js": true,
        "aws/**/*.d.ts": true
    }
}
