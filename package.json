{
    "name": "clowdr",
    "version": "1.0.0",
    "description": "Development setup",
    "main": "index.js",
    "scripts": {
        "postinstall": "cd services/actions && npm install && cd ../../frontend && npm install",
        "heroku-postbuild": "cd services/actions && npx tsc",
        "run-services-actions": "heroku local -p 3001 web"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/clowdr-app/clowdr.git"
    },
    "author": "Ed Nutting",
    "license": "BSD-3-Clause",
    "bugs": {
        "url": "https://github.com/clowdr-app/clowdr/issues"
    },
    "homepage": "https://github.com/clowdr-app/clowdr#readme",
    "devDependencies": {
        "@types/jest": "^26.0.15",
        "eslint": "^7.13.0",
        "eslint-plugin-jest": "^24.1.3",
        "husky": "^4.3.0",
        "import-sort-style-module": "^6.0.0",
        "lint-staged": "^10.5.1",
        "prettier": "^2.1.2",
        "prettier-plugin-import-sort": "0.0.6"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,css,md}": "prettier --write"
    },
    "importSort": {
        ".js, .jsx, .ts, .tsx": {
            "style": "module",
            "parser": "typescript"
        }
    },
    "engines": {
        "node": "14.x"
    },
    "dependencies": {}
}
